{
    "name": "webpack-google-ts",
    "description": "webpack-google-ts init",
    "version": "1.0.1",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "./html/index/index.html"
    },
    "background": {
        "scripts": ["./ts/bg.ts"],
        "persistent": true
    },

    "permissions": [
        "contextMenus",
		"tabs", 
		"notifications", 
		"webRequest",
		"webRequestBlocking",
		"storage",
        "http://*/*",
        "https://*/*"

    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "content_scripts": [{
        "matches": [
          
            "https://api.mabangerp.com/*",
            "https://www.baidu.com/*"
        ],
        "js": [
            "./ts/content.ts",
            "./ts/main.ts"
        ],
        "run_at": "document_end"
    }]
}